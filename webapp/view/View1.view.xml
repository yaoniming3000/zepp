<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:uxap="sap.uxap" controllerName="epp.epp.controller.View1" displayBlock="true">
	<Shell id="shell" appWidthLimited="false" title="Bridgestone Family and Friends">
